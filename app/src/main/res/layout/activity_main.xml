<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <ImageView
                    android:id="@+id/gHp1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heart2"
                    />

                <ImageView
                    android:id="@+id/gHp2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heart2"
                    />

                <ImageView
                    android:id="@+id/gHp3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heart2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gép"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Játékos"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/eHp1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heart2"
                    />

                <ImageView
                    android:id="@+id/eHp2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heart2"
                    />

                <ImageView
                    android:id="@+id/eHp3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heart2"
                    />



            </LinearLayout>




        </LinearLayout>

        <ImageView
            android:id="@+id/koKep"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/rock" />

        <TextView
            android:id="@+id/teValasztas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A te választásod"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/gepKoKep"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/rock" />

        <TextView
            android:id="@+id/gepValasztas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A gép választása"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eredmény: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/emberScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ember: 0 "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gepScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer: 0"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/koBtn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/rock"
                android:backgroundTint="@color/black"
                />

            <ImageView
                android:id="@+id/papirBtn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/paper"
                android:backgroundTint="@color/black"
                />

            <ImageView
                android:id="@+id/olloBtn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/scissors"
                android:backgroundTint="@color/black"
                />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>